<p id="notice"><%= notice %></p>

<h1>Type Movies</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_movies.each do |type_movie| %>
      <tr>
        <td><%= type_movie.category %></td>
        <td><%= link_to 'Show', type_movie %></td>
        <td><%= link_to 'Edit', edit_type_movie_path(type_movie) %></td>
        <td><%= link_to 'Destroy', type_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

